{
  "compilerOptions": {
    // TS Settings
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Build Settings
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "alwaysStrict": true,
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": [".@types"],
    "jsx": "react-jsx"
  },
  "include": ["**/*.ts", "**/*.tsx", "backend/data/db-config.ts"]
}
